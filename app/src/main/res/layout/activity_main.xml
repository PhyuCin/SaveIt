<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/bgone">

    <!--instructions box-->


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:text="@string/instructonsTitle"
        android:gravity="center"
        android:textSize="40sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        />

    <TextView
        android:id="@+id/instructions1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:text="@string/instructions1"
        android:layout_marginRight="50sp"
        android:layout_marginLeft="50sp"
        />

    <TextView
        android:id="@+id/instructions2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:text="@string/instructions2"
        android:layout_marginRight="50sp"
        android:layout_marginLeft="50sp"
        />

    <TextView
        android:id="@+id/instructions3"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:text="@string/instructions2"
        android:layout_marginRight="50sp"
        android:layout_marginLeft="50sp"
        />

    <!--buttons-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_marginRight="50sp"
        android:layout_marginLeft="50sp"
        android:layout_marginBottom="50sp">

        <Button
            android:id="@+id/menuButtonPlay"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="Play"
            android:onClick="goToPlayMenu"
            android:background="@drawable/buttonbg"/>
        <Button
            android:id="@+id/menuButtonHighScores"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="High Scores"
            android:layout_marginLeft="10sp"
            android:onClick="goToHighScores"
            android:background="@drawable/buttonbg"/>
        <Button
            android:id="@+id/menuButtonSettings"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="Settings"
            android:layout_marginLeft="10sp"
            android:onClick="goToSettings"
            android:background="@drawable/buttonbg"/>

    </LinearLayout>

</LinearLayout>