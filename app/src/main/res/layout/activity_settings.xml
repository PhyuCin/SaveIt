<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Settings"
    android:orientation="vertical"
    android:background="@drawable/bgone"
    android:id="@+id/settingsLayout">

    <Button
        android:id="@+id/playMenuBack"
        android:layout_width="80sp"
        android:layout_height="35sp"
        android:background="@drawable/buttonbg"
        android:text="@string/back"
        android:layout_margin="5sp"
        android:onClick="goToMainMenu"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/settings"
        android:textSize="34sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_margin="5sp"
        android:layout_gravity="center"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:layout_marginStart="50sp"
        android:layout_marginEnd="50sp"
        android:layout_marginBottom="50sp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:orientation="horizontal"
            android:layout_marginTop="10sp">

            <TextView
                android:id="@+id/third"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="match_parent"
                android:text="@string/background"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:gravity="center"
                tools:ignore="NestedWeights" />

            <Button
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_margin="2sp"
                android:background="@drawable/bgone"
                android:onClick="changeToBackground1"
                />
            <Button
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_margin="2sp"
                android:background="@drawable/bgtwo"
                android:onClick="changeToBackground2"/>

            <Button
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_margin="2sp"
                android:background="@drawable/bgthree"
                android:onClick="changeToBackground3"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:orientation="horizontal"
            android:layout_marginTop="10sp">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="match_parent"
                android:text="Dog"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:gravity="center"
                />

            <Button
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_margin="2sp"
                android:background="@drawable/dogone"
                android:onClick="changeToDog1"/>
            <Button
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_margin="2sp"
                android:background="@drawable/dogtwo"
                android:onClick="changeToDog2"/>

            <Button
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_margin="2sp"
                android:background="@drawable/dogthree"
                android:onClick="changeToDog3"/>
        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_marginTop="10sp">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="match_parent"
                android:text="Number of lives"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:gravity="center"
                />

            <Button
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="@string/three"
                android:background="@drawable/buttonbg"
                android:layout_margin="2sp"
                android:textStyle="bold"
                android:onClick="changeLivesTo3"/>
            <Button
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="@string/five"
                android:background="@drawable/buttonbg"
                android:layout_margin="2sp"
                android:textStyle="bold"
                android:onClick="changeLivesTo5"/>

            <Button
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="@string/ten"
                android:background="@drawable/buttonbg"
                android:layout_margin="2sp"
                android:textStyle="bold"
                android:onClick="changeLivesTo10"/>
        </LinearLayout>



        <Button
            android:layout_width="250sp"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:text="@string/reset_high_scores"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginTop="15sp"
            android:onClick="resetHighScores"
            android:background="@drawable/buttonbg"
            />


    </LinearLayout>



</LinearLayout>